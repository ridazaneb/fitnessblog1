<!-- app/views/sessions/new.html.erb -->
<h2>Login</h2>
<%= form_tag(login_path, method: "post") do %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Login" %>
<% end %>
